{% extends 'base.html.twig' %}

{% block title %}{{ provider.socialReason }}{% endblock %}

{% block body %}
    <h1>{{ provider.socialReason }}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ provider.id }}</td>
            </tr>
            <tr>
                <th>Adresse</th>
                <td>{{ provider.adresse }}</td>
            </tr>
            <tr>
                <th>Zipcode</th>
                <td>{{ provider.zipcode }}</td>
            </tr>
            <tr>
                <th>City</th>
                <td>{{ provider.city }}</td>
            </tr>
            <tr>
						<th>
							Instruments
						</th>
						{% for instrument in provider.instruments %}
							<td>
								<a href={{ path('app_instruments_show', {'id': instrument.id} ) }}>
									{{ instrument.libelle }}
								</a>
							</td>
						{% else %}
							<td>
								no record found
							</td>
						{% endfor %}
					</tr>
        </tbody>
    </table>

    <a href="{{ path('app_providers_index') }}">back to list</a>

    <a href="{{ path('app_providers_edit', {'id': provider.id}) }}">edit</a>

    {{ include('providers/_delete_form.html.twig') }}
{% endblock %}
