{% extends 'base.html.twig' %}

{% block title %}Instruments index{% endblock %}

{% block body %}
    <h1>Instruments index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Libelle</th>
                <th>Type</th>
                <th>Img</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for instrument in instruments %}
            <tr>
                <td>{{ instrument.id }}</td>
                <td>{{ instrument.libelle }}</td>
                <td>{{ instrument.type }}</td>
                <td>{{ instrument.img }}</td>
                <td>
                    <a href="{{ path('app_instruments_show', {'id': instrument.id}) }}">show</a>
                    <a href="{{ path('app_instruments_edit', {'id': instrument.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_instruments_new') }}">Create new</a>
{% endblock %}
